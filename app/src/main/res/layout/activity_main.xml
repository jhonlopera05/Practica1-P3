<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jhonlopera.practica1_p3.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.45">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:hint="0"
            android:id="@+id/display"
            android:textSize="45sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1sp"
            android:layout_marginTop="1sp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="9"
            android:textSize="28sp"
            android:textStyle="bold"
            android:id="@+id/nueve"/>

        <Button
            android:id="@+id/ocho"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1sp"
            android:layout_marginTop="1sp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="8"
            android:textSize="28sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1sp"
            android:layout_marginTop="1sp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="7"
            android:id="@+id/siete"
            android:textSize="28sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1sp"
            android:layout_marginTop="1sp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="+"
            android:textSize="28sp"
            android:textStyle="bold"
            android:id="@+id/mas"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1sp"
            android:layout_marginTop="1sp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="6"
            android:textSize="28sp"
            android:textStyle="bold"
            android:id="@+id/seis"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1sp"
            android:layout_marginTop="1sp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="5"
            android:textSize="28sp"
            android:textStyle="bold"
            android:id="@+id/cinco"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1sp"
            android:layout_marginTop="1sp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="4"
            android:id="@+id/cuatro"
            android:textSize="28sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1sp"
            android:layout_marginTop="1sp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="-"
            android:id="@+id/menos"
            android:textSize="28sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1sp"
            android:layout_marginTop="1sp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="3"
            android:id="@+id/tres"
            android:textSize="28sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1sp"
            android:layout_marginTop="1sp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="2"
            android:id="@+id/dos"
            android:textSize="28sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1sp"
            android:layout_marginTop="1sp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="1"
            android:id="@+id/uno"
            android:textSize="28sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1sp"
            android:layout_marginTop="1sp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="*"
            android:id="@+id/por"
            android:textSize="28sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1sp"
            android:layout_marginTop="1sp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="."
            android:textSize="28sp"
            android:id="@+id/punto"
            android:textStyle="bold" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1sp"
            android:layout_marginTop="1sp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="0"
            android:id="@+id/cero"
            android:textSize="28sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1sp"
            android:layout_marginTop="1sp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="="
            android:textSize="28sp"
            android:id="@+id/igual"
            android:textStyle="bold" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1sp"
            android:layout_marginTop="1sp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="/"
            android:id="@+id/division"
            android:textSize="28sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="Clear"
            android:textSize="28sp"
            android:layout_marginTop="1sp"
            android:id="@+id/clear"/>

    </LinearLayout>


</LinearLayout>
